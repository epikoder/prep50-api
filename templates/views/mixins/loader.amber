mixin Loader
    div[x-cloak][x-show="loading"]
    .absolute
    .top-0
    .left-0
    .right-0
    .bottom-0
    .z-1
    .m-0
    .overlay
        div.loader
            svg.circular
                circle
                [cx="50"]
                [cy="50"]
                [r="20"]
                [fill="none"]
                [stroke-width="5"]
                [stroke-miterlimit="10"]
                .path